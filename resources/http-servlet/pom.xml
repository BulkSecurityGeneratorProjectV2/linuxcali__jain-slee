<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>mobicents-parent</artifactId>
		<groupId>org.mobicents</groupId>
		<version>2.0</version>
	</parent>
	
	<artifactId>http-servlet-parent</artifactId>
	<groupId>org.mobicents.resources</groupId>
	<version>2.1.0-SNAPSHOT</version>
	
	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<modules>
		<module>common</module>
		<module>war</module>
		<module>events</module>
		<module>ratype</module>
		<module>ra</module>
		<module>du</module>
	</modules>
	
	<properties>
		<servlet-name>mobicents</servlet-name>
		<docs.profile>mobicents</docs.profile>
		<docs.ra.name>HTTP Servlet</docs.ra.name>
		<docs.ra.dirname>http-servlet</docs.ra.dirname>
		<docs.bookid>HttpServlet</docs.bookid>
	</properties>
	
	<profiles>
		<profile>
			<id>release</id>
			<modules>
				<module>docs</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<echo>HTTP Servlet release</echo>
										<copy overwrite="true" todir="${basedir}/../../release/${release.name}/resources/http-servlet">
											<fileset dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<!-- currently not handled correctly by du plugin
												 <include name="*.properties" />
												 -->
											</fileset>
											<fileset dir="${basedir}/war/target">
												<include name="*.war" />
											</fileset>
											<fileset dir="${basedir}/common/target">
												<include name="*.jar" />
											</fileset>
										</copy>
										<copy overwrite="true" file="${basedir}/du/target/build.xml" tofile="${basedir}/../../release/${release.name}/resources/http-servlet/du-management.xml" />
										<copy overwrite="true" file="${basedir}/release/build.xml" todir="${basedir}/../../release/${release.name}/resources/http-servlet">
                      <filterset>
                        <filter token="JBOSS.PATH" value="${jboss.path}" />
                        <filter token="JBOSS.CONFIG" value="${node}" />
                      </filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>maven-release</id>
			<modules>
				<module>docs</module>
			</modules>
			<build>
				<plugins>
					<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<tagBase>https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/resources/http-servlet</tagBase>
						<preparationGoals>clean install</preparationGoals>
					</configuration>
					</plugin>
				</plugins>
			</build>		
		</profile>
	</profiles>

	<scm>
		<connection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/resources/http-servlet</connection>
		<developerConnection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/resources/http-servlet</developerConnection>
		<url>http://mobicents.googlecode.com/svn/trunk/servers/jain-slee/resources/http-servlet</url>
	</scm>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
   				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>																	
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>mobicents-slee-ra-httpservlet</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>		
	</build>
	
	<!-- dupe info from parent, but it's only way to retrieve the parent without checkout -->

	<repositories>
		<repository>
			<id>jboss</id>
			<name>JBoss Repository</name>
			<url>http://repository.jboss.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>jboss-snapshots</id>
			<name>JBoss Snapshot Repository</name>
			<url>http://snapshots.jboss.org/maven2</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	
</project>