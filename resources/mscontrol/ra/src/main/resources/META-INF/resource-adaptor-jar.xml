<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE resource-adaptor-jar PUBLIC "-//Sun Microsystems, Inc.//DTD JAIN SLEE Resource Adaptor 1.1//EN" "http://java.sun.com/dtd/slee-resource-adaptor-jar_1_1.dtd">
<resource-adaptor-jar>
    <resource-adaptor id="MSC_1.0_RA">
        <description>Media control resource adaptor (JSR-309)</description>
        <resource-adaptor-name>MSC-1.0-RA</resource-adaptor-name>
        <resource-adaptor-vendor>org.mobicents</resource-adaptor-vendor>
        <resource-adaptor-version>1.0</resource-adaptor-version>
        <resource-adaptor-type-ref>
            <resource-adaptor-type-name>MSC-1.0-RA</resource-adaptor-type-name>
            <resource-adaptor-type-vendor>org.mobicents</resource-adaptor-type-vendor>
            <resource-adaptor-type-version>1.0</resource-adaptor-type-version>
        </resource-adaptor-type-ref>
        <library-ref>
            <library-name>msc-library</library-name>
            <library-vendor>org.mobicents.resources</library-vendor>
            <library-version>${pom.version}</library-version>
        </library-ref>
        <resource-adaptor-classes>
            <resource-adaptor-class>
                <resource-adaptor-class-name>
					org.mobicents.slee.resource.mediacontrol.McResourceAdaptor
                </resource-adaptor-class-name>
            </resource-adaptor-class>
        </resource-adaptor-classes>
        <config-property>
            <config-property-name>driverName</config-property-name>
            <config-property-type>java.lang.String</config-property-type>
            <config-property-value>org.mobicents</config-property-value>
        </config-property>
        <config-property>
            <config-property-name>configName</config-property-name>
            <config-property-type>java.lang.String</config-property-type>
            <config-property-value>msc.properties</config-property-value>
        </config-property>
    </resource-adaptor>
    <security-permissions>
        <description>
			Security permissions that allow this RA to connect to
			arbitrary sockets.
        </description>
        <security-permission-spec>
			grant {
			permission java.net.SocketPermission
			"*", "connect,resolve";
			};
        </security-permission-spec>
    </security-permissions>
</resource-adaptor-jar>

