<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.mobicents</groupId>
		<artifactId>mobicents-parent</artifactId>
		<version>2.2</version>
	</parent>
	
	<artifactId>mobicents-slee-ra-sip11</artifactId>
	<groupId>org.mobicents.resources</groupId>
	<version>2.0.0.CR1</version>
	
	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<modules>
		<module>jain-sip-ha</module>
		<module>library</module>
		<module>events</module>
		<module>ratype</module>
		<module>ra</module>
		<module>du</module>
	</modules>
	
	<properties>
		<mobicents.slee.version>2.0.0.CR1</mobicents.slee.version>
		<jsip.ha.version>0.6</jsip.ha.version>
		<loadbalancer.version>1.0.BETA12</loadbalancer.version>
		<docs.profile>mobicents</docs.profile>
		<docs.ra.name>SIP11</docs.ra.name>
		<docs.ra.dirname>sip11</docs.ra.dirname>
		<docs.bookid>SIP11</docs.bookid>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
					<groupId>org.mobicents.ha.javax.sip</groupId>
					<artifactId>mobicents-jain-sip-ha-core</artifactId>
					<version>${jsip.ha.version}</version>
			</dependency>
			<dependency>
					<groupId>org.mobicents.ha.javax.sip</groupId>
					<artifactId>mobicents-jain-sip-jboss5</artifactId>
					<version>${jsip.ha.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mobicents.servers.jainslee.core</groupId>
				<artifactId>fault-tolerant-ra-api</artifactId>
				<version>${mobicents.slee.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mobicents.servers.jainslee.core</groupId>
				<version>${mobicents.slee.version}</version>
				<artifactId>jar</artifactId>
			</dependency>
			<dependency>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>sip-balancer</artifactId>
				<version>${loadbalancer.version}</version>			
			</dependency>
		</dependencies>
	</dependencyManagement>
			
	<profiles>
		<profile>
			<id>jbcp</id>
			<properties>
				<docs.profile>jbcp</docs.profile>
			</properties>
		</profile>
			
		<profile>
			<id>release</id>
			<modules>
				<module>docs</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${basedir}/../../release/${release.name}/resources/sip11">
											<fileset dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<!-- currently not handled correctly by du plugin
												 <include name="*.properties" />
												 -->
											</fileset>
										</copy>
										<copy overwrite="true" file="${basedir}/du/target/build.xml" tofile="${basedir}/../../release/${release.name}/resources/sip11/du-management.xml" />
										<copy overwrite="true" file="${basedir}/release/build.xml" todir="${basedir}/../../release/${release.name}/resources/sip11">
											<filterset>
												<filter token="JBOSS.PATH" value="${jboss.path}" />
												<filter token="JBOSS.CONFIG" value="${node}" />
											</filterset>
										</copy>
										<!-- copy docs -->
										<copy overwrite="true" todir="${basedir}/../../release/${release.name}/resources/sip11/docs">
											<fileset dir="${basedir}/docs/jdocbook-${docs.profile}/target/docbook/publish" />
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>maven-release</id>
			<modules>
				<module>docs</module>
			</modules>
			<build>
				<plugins>
					<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<tagBase>https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/resources/sip11</tagBase>
						<preparationGoals>clean install</preparationGoals>
					</configuration>
					</plugin>
				</plugins>
			</build>		
		</profile>
	</profiles>

	<scm>
		<connection>scm:svn:https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/resources/sip11/2.0.0.CR1</connection>
		<developerConnection>scm:svn:https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/resources/sip11/2.0.0.CR1</developerConnection>
		<url>http://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/resources/sip11/2.0.0.CR1</url>
	</scm>
	
<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>mobicents-slee-ra-sip11</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>		
	</build>
	
	<!-- dupe info from parent, but it's only way to retrieve the parent without checkout -->

	<repositories>
		<repository>
			<id>jboss</id>
			<name>JBoss Repository</name>
			<url>http://repository.jboss.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>jboss-snapshots</id>
			<name>JBoss Snapshot Repository</name>
			<url>http://snapshots.jboss.org/maven2</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	
</project>
