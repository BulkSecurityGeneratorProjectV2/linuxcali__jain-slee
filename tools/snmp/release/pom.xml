<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.mobicents.servers.jainslee.tools.snmp</groupId>
		<artifactId>mobicents-slee-tools-snmp-parent</artifactId>
		<version>6.1.2.GA-TelScale</version>
	</parent>

	<artifactId>mobicents-slee-tools-snmp-release</artifactId>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${release.dir}/tools/snmp/snmp-adaptor.sar">
											<fileset dir="${basedir}/../adaptor/target/snmp-adaptor.sar" />
										</copy>
										<copy overwrite="true" file="${basedir}/build.xml" todir="${release.dir}/tools/snmp">
											<filterset>
												<filter token="JBOSS.PATH" value="${jboss.path}" />
												<filter token="JBOSS.CONFIG" value="${node}" />
											</filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>