<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>http-client-parent</artifactId>
		<groupId>org.mobicents.resources</groupId>
		<version>2.8.0-SNAPSHOT</version>
	</parent>

	<artifactId>http-client-ra-release</artifactId>
	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${release.dir}/tools/snmp-adaptor/adaptor.sar">
											<fileset dir="${basedir}/../core/target">
												<include name="**.jar" />
											</fileset>
										</copy>
										<copy overwrite="true" todir="${release.dir}/tools/snmp-adaptor/adaptor.sar">
                                            <fileset dir="${basedir}/../war/src/main/webapp/WEB-INF">
                                                <include name="attributes.xml" />
                                                <include name="notifications.xml" />
                                                <include name="mobicents-slee.mib" />
                                            </fileset>
                                        </copy>

										<copy overwrite="true" file="${basedir}/build.xml" todir="${release.dir}/tools/snmp-adaptor">
											<filterset>
												<filter token="JBOSS.PATH" value="${jboss.path}" />
												<filter token="JBOSS.CONFIG" value="${node}" />
											</filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>