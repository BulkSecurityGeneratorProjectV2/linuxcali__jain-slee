<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.servers.jainslee.tools.snmp</groupId>
		<artifactId>mobicents-slee-tools-snmp-parent</artifactId>
		<version>6.1.2-TelScale-SNAPSHOT</version>
	</parent>

	<artifactId>mobcients-slee-tools-snmp-adaptor</artifactId>

	<packaging>pom</packaging>

	<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${project.build.directory}/snmp-adaptor.sar">
											<fileset dir="${basedir}/../core/target">
												<include name="**.jar" />
											</fileset>
										</copy>
										<copy overwrite="true" todir="${project.build.directory}/snmp-adaptor.sar">
                                            <fileset dir="${basedir}/../war/src/main/webapp/WEB-INF">
                                                <include name="attributes.xml" />
                                                <include name="notifications.xml" />
                                                <include name="mobicents-slee.mib" />
                                            </fileset>
                                        </copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>

</project>
