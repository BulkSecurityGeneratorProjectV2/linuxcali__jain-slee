	<groupId>org.mobicents.servers.jainslee.tools</groupId>
	<artifactId>eclipslee</artifactId>
	<version>0.0.2-SNAPSHOT</version>

	<name>Mobicents :: JAIN SLEE Tools :: EclipSLEE</name>

	<packaging>pom</packaging>

	<properties>
		<tychoVersion>0.10.0</tychoVersion>
	</properties>

	<modules>
		<module>features</module>
		<module>plugins</module>
		<module>site</module>
		<!--module>docs</module-->
	</modules>

	<scm>
		<connection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/tools/eclipslee</connection>
		<developerConnection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/tools/eclipslee</developerConnection>
		<url>http://mobicents.googlecode.com/svn/trunk/servers/jain-slee/tools/eclipslee</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>mobicents-slee-tools-eclipslee</eclipseProjectName>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tychoVersion}</version>
				<extensions>true</extensions>
			</plugin>

