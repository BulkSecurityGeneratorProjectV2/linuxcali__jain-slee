<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<packaging>pom</packaging>

	<parent>
		<artifactId>mobicents-slee-connectivity-example</artifactId>
		<groupId>org.mobicents.examples</groupId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>mobicents-slee-connectivity-example-release</artifactId>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<id>install</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true"
											todir="${basedir}/../../../release/${release.name}/examples/slee-connectivity">
											<fileset dir="${basedir}/../slee/du/target">
												<include name="**.jar" />
											</fileset>
											<fileset
												dir="${basedir}/../javaee/beans/target/mobicents-slee-connectivity-example-javaee-beans-beans" />
										</copy>
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>clear</id>
								<phase>clear</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete
											dir="${basedir}/../../../release/${release.name}/examples/slee-connectivity" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>