<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <parent>
        <artifactId>mobicents-parent</artifactId>
        <groupId>org.mobicents</groupId>
        <version>2.19-SNAPSHOT</version>
    </parent>

    <artifactId>tftp-server-parent</artifactId>
	<groupId>org.mobicents.examples</groupId>
	<version>1.0.0-SNAPSHOT</version>

    <name>Mobicents :: Examples :: ${pom.artifactId}</name>

    <modules>
        <module>sbb</module>
        <module>du</module>
    </modules>

	<properties>
		<mobicents.servers.jainslee.version>2.4.2-SNAPSHOT</mobicents.servers.jainslee.version>

		<mobicents.resources.tftp.server.version>1.0.0-SNAPSHOT</mobicents.resources.tftp.server.version>
		<docs.profile>mobicents</docs.profile>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
	            <artifactId>mobicents-slee-ra-tftp-server-ratype</artifactId>
	            <groupId>org.mobicents.resources</groupId>
	            <version>${mobicents.resources.tftp.server.version}</version>
	        </dependency>
	        <dependency>
	            <artifactId>mobicents-slee-ra-tftp-server-events</artifactId>
	            <groupId>org.mobicents.resources</groupId>
	            <version>${mobicents.resources.tftp.server.version}</version>
	        </dependency>
	        <dependency>
	            <artifactId>spi</artifactId>
	            <groupId>org.mobicents.servers.jainslee.core</groupId>
	            <version>${mobicents.servers.jainslee.version}</version>
	        </dependency>
		</dependencies>
	</dependencyManagement>
	
	<profiles>
		<profile>
			<id>maven-release</id>
			<modules>
				<module>docs</module>
				<module>release</module>
			</modules>
			<build>
				<plugins>
					<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<tagBase>https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/examples/tftp-server</tagBase>
						<branchBase>https://mobicents.googlecode.com/svn/branches/servers/jain-slee/2.x.y/examples/tftp-server</branchBase>
						<preparationGoals>clean install</preparationGoals>
					</configuration>
					</plugin>
				</plugins>
			</build>		
		</profile>
		<profile>
			<id>release</id>
			<modules>
				<module>docs</module>
				<module>release</module>
			</modules>
		</profile>
	</profiles>	

	<scm>
		<connection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/tftp-server</connection>
		<developerConnection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/tftp-server</developerConnection>
		<url>http://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/tftp-server</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
   				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>mobicents-slee-example-tftp-server</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- dupe info from parent, but it's only way to retrieve the parent without checkout -->

	<repositories>
		<repository>
			<id>jboss-public-repository-group</id>
			<name>JBoss Public Maven Repository Group</name>
			<url>https://repository.jboss.org/nexus/content/groups/public</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
		</repository>
	</repositories>
</project>