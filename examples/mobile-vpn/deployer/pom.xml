
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- parent>
        <groupId>org.mobicents.examples</groupId>
        <artifactId>VoiceVPN</artifactId>
	  <version>2.1.0-SNAPSHOT</version>
    </parent -->

    <groupId>org.mobicents.examples</groupId>
    <artifactId>vpn-rules-deployer</artifactId>
    <version>2.1.0-SNAPSHOT</version>

    <name>Voice VPN :: Route Rules Deployer Service</name>
    
    <dependencies>
        <dependency>
            <artifactId>vpn-rules</artifactId>
            <groupId>org.mobicents.examples</groupId>
		<version>2.1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    
    <build>
        <finalName>vpn-rules-deployer.sar</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <condition property="jboss.dir"	value="${jboss.home}" else="${env.JBOSS_HOME}">
                                    <isset property="jboss.home" />
                                </condition>
                                <mkdir dir="${jboss.dir}/server/default/deploy/vpn-rules-deployer.sar"/>
                                <mkdir dir="${jboss.dir}/server/default/deploy/vpn-rules-deployer.sar/META-INF"/>
                                <copy todir="${jboss.dir}/server/default/deploy/vpn-rules-deployer.sar/" 
                                    overwrite="true" file="../rules/target/voice-vpn-rules.jar"/>
                                
                                    
                                <copy todir="${jboss.dir}/server/default/deploy/vpn-rules-deployer.sar/META-INF/"
                                    overwrite ="true" file="src/main/resources/META-INF/jboss-service.xml"/>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>undeploy</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete	dir="${env.JBOSS_HOME}/server/default/deploy/vpn-rules-deployer.sar"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>