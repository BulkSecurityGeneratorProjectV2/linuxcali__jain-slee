
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>jainslee-du</packaging>
    
    <parent>
		<artifactId>ivr-demo-service</artifactId>
		<groupId>org.mobicents.examples</groupId>
		<version>1.0.0-SNAPSHOT</version>  
    </parent>
    
    <artifactId>ivr-demo-service-DU</artifactId>
    <groupId>org.mobicents.examples</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Interactive Voice Response [Voice Menu, Deployable Unit]</name>
    <dependencies>
        <dependency>
            <artifactId>ivr-demo-service-sbb</artifactId>
            <groupId>org.mobicents.examples</groupId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <artifactId>ivr-demo-service-events</artifactId>
            <groupId>org.mobicents.examples</groupId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.mobicents.tools</groupId>
                <artifactId>maven-du-plugin</artifactId>
                <version>2.0.0.BETA3</version>
                <extensions>true</extensions>
                <configuration />
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy-DU</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy overwrite="true" file="target/${project.build.finalName}.jar" todir="${jboss.home}/server/${node}/deploy" />
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>undeploy-DU</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete file="${jboss.home}/server/${node}/deploy/${project.build.finalName}.jar" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
