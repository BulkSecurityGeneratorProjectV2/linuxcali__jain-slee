<process-definition name='ivr-interface'>

    <start-state name='start'>
        <transition to='welcome' />
    </start-state>

    <state name='welcome'>
        <event type='node-enter'>            
            <action class='org.mobicents.slee.demo.ivr.DefaultTransitionHandler'/>
        </event>
        <transition name='announcement_completed' to='end' />
    </state>

    <end-state name='end'>
          <event type='node-enter'>            
            <action class='org.mobicents.slee.demo.ivr.DefaultTransitionHandler'/>
        </event>
    </end-state>

</process-definition>