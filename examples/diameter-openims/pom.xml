<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	
	<parent>
		<groupId>org.mobicents</groupId>
		<artifactId>mobicents-parent</artifactId>
		<version>2.21</version>
	</parent>

	<groupId>org.mobicents.servers.diameter.examples</groupId>
	<artifactId>openims-parent</artifactId>
	<version>2.6.0-SNAPSHOT</version>

	<name>Mobicents :: Diameter Examples :: ${pom.artifactId}</name>
				
	<modules>
		<module>sbb</module>						
		<module>du</module>			
	</modules>
	
	<properties>
		<!-- Mobicents Diameter Components Versions -->
		<mobicents.diameter.resources.sh-client.version>2.7.0-SNAPSHOT</mobicents.diameter.resources.sh-client.version>
		
		<!-- Other Mobicents Components Versions -->
		<mobicents.servers.jainslee.resources.sip11.version>2.5.0.FINAL</mobicents.servers.jainslee.resources.sip11.version>
		<mobicents.tools.mavenplugin.eclipse.version>1.0.0.BETA2</mobicents.tools.mavenplugin.eclipse.version>
	</properties>
	
	<profiles>
		<profile>
			<id>maven-release</id>
			<modules>
				<!-- any module not bound to default modules, such as the ones for test, release, etc... -->
			</modules>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-release-plugin</artifactId>
						<configuration>
							<autoVersionSubmodules>true</autoVersionSubmodules>
							<resume>false</resume>
							<tagBase>https://mobicents.googlecode.com/svn/tags/servers/jain-slee/2.x.y/examples/diameter-openims</tagBase>
						</configuration>
					</plugin>
				</plugins>
			</build>			 
		</profile>
	
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${basedir}/../../release/${release.name}/examples/diameter-openims">
											<fileset dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include name="*.properties" />										
											</fileset>
										</copy>
										<copy overwrite="true" file="${basedir}/du/target/build.xml" tofile="${basedir}/../../release/${release.name}/examples/diameter-openims/du-management.xml" />
										<copy overwrite="true" file="${basedir}/release/build.xml" todir="${basedir}/../../release/${release.name}/examples/diameter-openims">
											<filterset>
												<filter token="JBOSS.PATH" value="${jboss.path}" />
												<filter token="JBOSS.CONFIG" value="${node}" />
											</filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<scm>
		<connection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/diameter-openims</connection>
		<developerConnection>scm:svn:https://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/diameter-openims</developerConnection>
		<url>http://mobicents.googlecode.com/svn/trunk/servers/jain-slee/examples/diameter-openims</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>
						<exclude>org.jboss.jbossas:jboss-as-system:5.0.0.CR2</exclude>
						<exclude>org.jboss.jbossas:jboss-as-deployment:5.0.0.CR2</exclude>
						<exclude>org.jboss.jbossas:jboss-as-system-jmx:5.0.0.CR2</exclude>
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>mobicents-slee-examples-diameter-openims</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- dupe info from parent, but it's only way to retrieve the parent without checkout -->

	<repositories>
		<repository>
			<id>jboss-public-repository-group</id>
			<name>JBoss Public Maven Repository Group</name>
			<url>https://repository.jboss.org/nexus/content/groups/public</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

</project>
